/*
 * HDMI only dts, disable ldb display.
 */

#include "fsl-imx8qm-lpddr4-arm2.dts"

/ {
	sound-hdmi {
		compatible = "fsl,imx-audio-cdnhdmi";
		model = "imx-audio-dp";
		audio-cpu = <&sai_hdmi_tx>;
		protocol = <1>;
		hdmi-out;
	};
};

&ldb1_phy {
	status = "disabled";
};

&ldb1 {
	status = "disabled";
};

&i2c1_lvds0 {
	status = "disabled";
};

&hdmi {
	compatible = "fsl,imx8qm-dp";
 	fsl,use_digpll_pclock;
	status = "okay";
};
